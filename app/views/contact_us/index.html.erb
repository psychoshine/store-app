<style type="text/css">
  .pagination li.active {
    background: grey;
}
  .pagination li a:hover {
    background: #eeeeee;
  }
</style>
<% if current_user.present? and current_user.admin? %>
<p id="notice"><%= notice %></p>



<table class="highlight">
  <thead>
    <tr>
      <th><%= t(:contact_us_email)%></th>
      <th><%= t(:contact_us_message)%></th>
      <th><%= t(:contact_us_sent_at)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contact_us.each do |contact_u| %>
      <tr>
        <td><%= contact_u.email %></td>
        <td><%= contact_u.message %></td>
        <td><%= contact_u.created_at.strftime('%d.%m.%Y') %></td>
        <td><%= link_to t(:destroy), contact_u, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% end %>
<div class="center">
<%= will_paginate @contact_us %>
</div>