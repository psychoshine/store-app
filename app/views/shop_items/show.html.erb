<% if current_page?(locale: :ua) %>
<% provide(:title, @shop_item.title1) %>  
<% end %>

<% if current_page?(locale: :ru) %>
<% provide(:title, @shop_item.title2) %>  
<% end %>

<p id="notice"><%= notice %></p>

<% if current_page?(locale: :ua) %>
<div class="row">
    <div class="col s12 m6 offset-m3 ">
      <div class="card hoverable">
        <div class="card-image">
          <%= image_tag @shop_item.shop_image.url(:large) %>
              <span class="card-title truncate"><td><%= @shop_item.title1 %></td></span>   
        </div>
        <div class="card-content">
          <h5><%= t(:price)%>: <%= @shop_item.price%></h5>
          <p><%= simple_format(@shop_item.description1)%></p>
        </div>
        <div class="card-content">
          <div class="row">
          <%= form_for([@cart_item.shop_item, @cart_item], html: {multipart: true}) do |f| %>
            <% if @cart_item.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@cart_item.errors.count, "error") %> prohibited this cart_item from being saved:</h2>

                <ul>
                <% @cart_item.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="input-field col s2">
              <%= f.label t(:quantity) %>
              <%= f.number_field :quantity, :value => 1  %>
            </div>
            <br>
            <div class="waves-effect waves-light btn">
              <%= f.submit t(:add_to_cart)%>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% if current_page?(locale: :ru) %>
<div class="row">
    <div class="col s12 m6 offset-m3 ">
      <div class="card hoverable">
        <div class="card-image">
          <%= image_tag @shop_item.shop_image.url(:large) %>

              <span class="card-title truncate"><td><%= @shop_item.title2 %></td></span>  
        </div>
        <div class="card-content">
          <h5><%= t(:price)%>: <%= @shop_item.price%></h5>
          <p><%= simple_format(@shop_item.description2)%></p>
        </div>
        <div class="card-content">
          <div class="row">
          <%= form_for([@cart_item.shop_item, @cart_item], html: {multipart: true}) do |f| %>
            <% if @cart_item.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@cart_item.errors.count, "error") %> prohibited this cart_item from being saved:</h2>

                <ul>
                <% @cart_item.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="input-field col s2">
              <%= f.label t(:quantity) %>
              <%= f.number_field :quantity, :value => 1  %>
            </div>
            <br>
            <div class="waves-effect waves-light btn">
              <%= f.submit t(:add_to_cart)%>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

  <div class="container center">
    <%= link_to t(:back), shop_items_path, class: "waves-effect waves-light btn grey lighten-3"  %>
    <% if current_user.present? and current_user.admin? %>
    <%= link_to t(:edit), edit_shop_item_path(@shop_item), class: "waves-effect waves-light btn" %> 
    <%= link_to t(:destroy), @shop_item, method: :delete, data: { confirm: 'Are you sure?' }, class: "waves-effect waves-light btn red" %>
    <% end %>
  </div>